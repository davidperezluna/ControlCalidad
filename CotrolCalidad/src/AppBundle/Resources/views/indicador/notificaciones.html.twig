
<li class="dropdown notifications-menu">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell-o"></i>
    {% if seguimientoIndicador|length == 0 %}
      {% else %}
      <span class="label label-warning">{{seguimientoIndicador|length}}</span>
          
    {% endif %}
  </a>
  <ul class="dropdown-menu">
    {% if seguimientoIndicador|length == 1 %}
      <li class="header">{{seguimientoIndicador|length}} seguimiento vencido</li>
      {% else %}
       <li class="header">{{seguimientoIndicador|length}} seguimientos vencidos</li>   
    {% endif %}
    <li>
      <!-- inner menu: contains the actual data -->
      <ul class="menu">
        {% if seguimientoIndicador|length > 0 %}
          {% for notificacion in seguimientoIndicador %}
            <li>
              <a href="{{ path('indicador_show',{'id':notificacion.indicador.id})}}">
                {% if seguimientoIndicador|length >= 1 %}
                <i class="fa fa-calendar-times-o text-aqua"></i>seguimiento vencido...
                {% endif %}
              </a>
            </li>
          {% endfor %}  
        {% endif %}
      </ul>
    </li>
    <li class="footer"><a href="#">View all</a></li>
  </ul>
</li>