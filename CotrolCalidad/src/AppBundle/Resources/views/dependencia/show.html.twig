{% extends 'base.html.twig' %}

{% block body %}

    <h1>Dependencium</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dependencium.id }}</td>
            </tr>
            <tr>
                <th>Nit</th>
                <td>{{ dependencium.nit }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ dependencium.nombre }}</td>
            </tr>
            <tr>
                <th>Representante</th>
                <td>{{ dependencium.representante }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dependencia_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dependencia_edit', { 'id': dependencium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    {% for mp in dependencium.macroprocesos %}
        <li>{{mp.nombre}}//{{mp.categoria.nombre}}</li>
    {% endfor %}

{% endblock %}
