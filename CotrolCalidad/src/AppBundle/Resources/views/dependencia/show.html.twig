{% extends 'base.html.twig' %}

{% block body %}
    <h3>{{ dependencium.nombre }}</h3>
    {% for categoria in categorias %}
        <a  href="{{ path('macroproceso_new', { 'idCategoria': categoria.id,'idDependencia': dependencium.id}) }}" class="small-box-footer">
                            <i class="fa fa-plus"></i>Nuevo
        </a>
        <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">{{categoria.nombre}}</h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fa fa-minus"></i></button>
              </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                {% for mp in dependencium.macroprocesos %}
                    {% if mp.categoria.id == categoria.id %}


                    {% set macros = dependencium.macroprocesos|length %}

                        <div class="col-md-6 iteracion_ciclo" id="{{macros}}">
                            <div class="box box-solid macros">
                                <div class="box-header with-border">
                                    
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <div class="box-group" id="accordion">
                                        <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
                                        <div class="panel box box-primary">
                                            <div class="box-header with-border">
                                                <h4 class="box-title">
                                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne{{mp.id}}" aria-expanded="false" class="collapsed">
                                                       <h3 class="box-title">{{mp.nombre}}</h3>
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="collapseOne{{mp.id}}" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                                <div class="box-body">
                                                    <a  href="{{ path('proceso_new', { 'idMacroProceso': mp.id}) }}" class="small-box-footer">
                                                        <i class="fa fa-plus"></i>Nuevo
                                                    </a>
                                                       <table class="table" id="example{{mp.id}}">
                                                            <thead>
                                                                <tr>
                                                                    <th>Codigo</th>
                                                                    <th>Nombre</th>
                                                                    <th>Version</th>
                                                                    <th>Vigencia</th>
                                                                    <th>ver</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                            {% for proceso in mp.procesos %}
                                                                <tr>
                                                                    <td>{{ proceso.codigo }}</td>
                                                                    <td>{{ proceso.nombre }}</td>
                                                                    <td>{{ proceso.version }}</td>
                                                                    <td>{% if proceso.vigencia %}{{ proceso.vigencia|date('Y-m-d') }}{% endif %}</td>
                                                                    <td><a href="{{ path('proceso_show', { 'id': proceso.id }) }}" class="btn btn-social-icon btn-bitbucket btn-xs"><i class="fa  fa-hand-pointer-o"></i></a></td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        </table>


                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    {% endif %}
                {% endfor %}

            </div>
            <!-- /.box-footer-->
        </div>
    {% endfor %}


{% endblock %}




{% block javascripts %}
    {{ parent() }}

<script>
var id;
for (id=0; id < 50; id++) {

     $('#example'+id).DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": true,
      "ordering": false,
      "info": false,
      "autoWidth": false

    });
};
</script>
{% endblock %}
