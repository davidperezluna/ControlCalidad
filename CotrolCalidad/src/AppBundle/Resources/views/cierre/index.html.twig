{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cierres list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>+ Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cierre in cierres %}
            <tr>
                <td><a href="{{ path('cierre_show', { 'id': cierre.id }) }}">{{ cierre.id }}</a></td>
                <td>{{ cierre.estado }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cierre_show', { 'id': cierre.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('cierre_edit', { 'id': cierre.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cierre_new') }}">Create a new cierre</a>
        </li>
    </ul>
{% endblock %}
