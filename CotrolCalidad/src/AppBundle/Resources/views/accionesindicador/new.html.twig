{% extends 'base.html.twig' %}

{% block body %}
    <dir class="col-lg-4">
    <h1>Registrar accion</h1>
    {{ form_start(form) }}
        {{ form_widget(form.fechaCierre, {'attr': {'class': 'hidden'}}) }}

        <label>Acciones:</label>
        {{ form_widget(form.accion) }}
        <label>Fecha de cierre:</label>
        <input type="date" class="form-control" name="fechaCierre">
        <br>
        <input type="submit" class="btn btn-default btn-block" value="Registrar" />
    {{ form_end(form) }}
</dir>
    
{% endblock %}
