{% extends 'base.html.twig' %}
{% block body %}
	
{% for e in empresas %}
	
	
	<div class="box collapsed-box">
	    <div class="box-header with-border">
	      <h3 class="box-title">{{e.nombre}} </h3> 
		    <small style="margin-left:93%; position: relative; top: -1.9em;">
		      	<a  data-toggle="tooltip" title="Nueva dependencia" href="{{ path('dependencia_new', { 'idEmpresa': e.id}) }}" class="btn btn-default btn-xs">
					<i class="fa fa-plus"></i> Dependencia
				</a>
			</small>
	      <div class="box-tools pull-right">
	        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Abrir">
	          <i class="fa fa-minus"></i></button>
	      </div>
	    </div>
	    <!-- /.box-body -->
	    <div class="box-footer">
	    		
		     		{% for d in e.dependencias %}
		     			<div class="small-box bg-light-blue disabled color-palette col-md-3 container" style="    margin-right: 15px;
    						border-radius: 10px;">
			            <div class="inner" >
		     			<p><small>	 {{d.nombre}} </small></p>
			            </div>
			            <div class="icon">
			              <i class="fa  fa-folder-open"></i>
			            </div>
			            <a  href="{{ path('dependencia_show', { 'id': d.id }) }}" class="small-box-footer" style="   
    						border-radius: 150000px;">
			              <i class="fa fa-arrow-circle-right"></i>
			            </a>
			          </div>
		     		  {% endfor %}
	    </div>
	    <!-- /.box-footer-->
	</div>
{% endfor %}	
{% endblock %}
