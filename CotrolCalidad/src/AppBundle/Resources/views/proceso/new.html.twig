{% extends 'base.html.twig' %}

{% block referencia %}
     <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a  href="{{ path('dependencia_show', { 'id': macroProceso.dependencia.id }) }}">{{macroProceso.dependencia.nombre}}</a></li>
        <li class="active">Nuevo</li>
      </ol>
{% endblock %}

{% block body %}
     <div class="col-lg-5">
                  <a href="{{ path('proceso_index') }}" style="margin-left: 89%;" class="link-black text-sm col-lg-offset-10"><i class="fa fa-mail-reply margin-r-5"></i> Atras</a>

        <div class="box box-success col-lg-5 ">
                <div class="box-header with-border">
                  <h3 class="box-title">Crear Proceso</h3>
                </div>
                 {{ form_start(form) }}

                    <b>Vigencia</b>
                    <div class="input-group">
                              <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                              </div>
                                {{ form_widget(form.vigencia, { 'attr': {'data-inputmask':"'alias': 'dd/mm/yyyy'",'data-mask':''} }) }}
                            </div>
                    {{ form_widget(form) }}



                    <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Crear</button>
                {{ form_end(form) }}
        </div>
    </div>
   
{% endblock %} 
