{% extends 'base.html.twig' %}

{% block referencia %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="{{ path('proceso_show',{'id':proceso.id}) }}">Proceso</a></li>
        <li class="active">Editar</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="col-lg-5">
        <div class="box box-info col-lg-5 ">
                <div class="box-header with-border">
                  <h3 class="box-title">Editar Proceso</h3>
                </div>
                 {{ form_start(edit_form) }}
                 <b>Vigencia</b>
                    <div class="input-group">
                              <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                              </div>
                                {{ form_widget(edit_form.vigencia, { 'attr': {'data-inputmask':"'alias': 'yyyy/dd/mm'",'data-mask':''} }) }}
                            </div>
                   {{ form_widget(edit_form) }}
                    <br>
                    <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                  </div>
                {{ form_end(edit_form) }}
                
             
        </div>
    </div>
{% endblock %}
 