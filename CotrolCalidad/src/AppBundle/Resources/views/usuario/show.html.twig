{% extends 'base.html.twig' %}

{% block body %}
    <div class="container col-lg-3"> 
        <a href="{{ path('usuario_index') }}" class="link-black text-sm"><i class="fa fa-mail-reply margin-r-5"></i> Atras</a>
        <div class="box box-primary">

            <div class="box-body box-profile">
                <img class="profile-user-img img-responsive img-circle" src="../../dist/img/user6-128x128.jpg" alt="User profile picture">

                <h3 class="profile-username text-center">{{ usuario.nombres }}</h3>

                <p class="text-muted text-center">{{ usuario.apellidos }}</p>

                <ul class="list-group list-group-unbordered">
                    <li class="list-group-item">
                        <b>Identificacion</b> <a class="pull-right">{{ usuario.identificacion }}</a>
                    </li>
                    <li class="list-group-item">
                        <b>Direccion</b> <a class="pull-right">{{ usuario.direccion }}</a>
                    </li>
                    <li class="list-group-item">
                        <b>Telefono</b> <a class="pull-right">{{ usuario.telefono }}</a>
                    </li>
                    <li class="list-group-item">
                        <b>Email</b> <a class="pull-right">{{ usuario.telefono }}</a>
                    </li>
                    <li class="list-group-item">
                        <b>Role</b> <a class="pull-right">{{ usuario.role }}</a>
                    </li>

                </ul>
                {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger btn-block" value="Eliminar">
                {{ form_end(delete_form) }}

            </div>
            <!-- /.box-body -->
        </div>
    </div>
    <div style="margin-top: 19px;">
        <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}" class="btn btn-app">
            <i class="fa fa-edit"></i> Editar
        </a>
        <br>
    </div>
{% endblock %}
