{% extends 'base.html.twig' %}

{% block referencia %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Docuemento</li>
    </ol>
{% endblock %}

{% block body %}
<!-- /.box -->
<div class="col-lg-12">
        <div class="col-lg-1">
            <a href="{{ path('documento_new')}}" class="btn btn-app btn-xs">
                <i class="fa fa-plus"></i> Agregar
            </a>
        </div>
       
        <div class="col-lg-12">
          <div class="box">
            <div class="box-header">
                
              <h3 class="box-title">Documento</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">

                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Urldocumento</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                 {% for documento in documentos %}
                    <tr>
                        <td><a href="{{ path('documento_show', { 'id': documento.id }) }}">{{ documento.id }}</a></td>
                        <td>{{ documento.nombre }}</td>
                        <td><a href="{{ path('catalogo_marca_download', { 'id': documento.id }) }}">descargar</a></td>
                        <td>
                            <div class="btn-group">
                              <a href="{{ path('documento_show', { 'id': documento.id }) }}" class="btn btn-default btn-flat"><i class="fa fa-eye"></i></a>
                              <a href="{{ path('documento_edit', { 'id': documento.id }) }}" class="btn btn-default btn-flat"><i class="fa fa-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
               
              </table>

            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
      </div>
           
</div>
{% endblock %}
