{% extends 'base.html.twig' %}

{% block referencia %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Docuemento</li>
    </ol>
{% endblock %}

{% block body %}
<!-- /.box -->
<div class="col-lg-12">
        <div class="col-lg-1">
            <a data-toggle="tooltip"data-original-title="Agregar nuevo documento" href="{{ path('documento_index_new')}}" class="btn btn-app btn-xs">
                <i class="fa fa-plus"></i> Agregar
            </a>
        </div>
       
        <div class="col-lg-12">
          <div class="box">
            <div class="box-header">
                
              <h3 class="box-title">Documento</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">

                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Version</th>
                    <th>vigencia</th>
                    <th>Descargar</th>
                    <th>Instructivo</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                 {% for documento in documentos %}
                    <tr>
                        <td>{{ documento.nombre }}</td>
                        <td>{{ documento.version }}</td>
                        <td>{{ documento.vigencia }}</td>
                        <td>
                          <a data-toggle="tooltip"data-original-title="Descargar" class="btn btn-primary " href="{{ path('catalogo_marca_download', { 'id': documento.id }) }}">
                            <i class="fa  fa-cloud-download"></i>
                          </a>
                        </td>

                        <td>
                          <a data-toggle="tooltip"data-original-title="Descargar" class="btn btn-primary " href="{{ path('instructivo_download', { 'id': documento.id }) }}">
                            <i class="fa  fa-cloud-download"></i>
                          </a>
                        </td>

                        <td>
                            <div class="btn-group">
                              <a data-toggle="tooltip"data-original-title="editar" href="{{ path('documento_edit', { 'id': documento.id }) }}" class="btn btn-default btn-flat"><i class="fa fa-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
               
              </table>

            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
      </div>
           
</div>
{% endblock %}
