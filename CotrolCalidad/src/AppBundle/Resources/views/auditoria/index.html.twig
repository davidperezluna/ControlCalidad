{% extends 'base.html.twig' %}

{% block body %}
<div class="col-lg-12">
     <h1>Auditorias</h1>
     <div class="col-md-4">
          <!-- About Me Box -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">{{ proceso.nombre }}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
               <strong><i class="fa fa-qrcode margin-r-5"></i> Codigo </strong>
              <p>
                {% if proceso.codigo < 10 %}
                 <b> {{proceso.macroProceso.sigla | upper}}</b>0{{ proceso.codigo }}
                {% else %}
                    <b> {{proceso.macroProceso.sigla | upper}}</b>{{ proceso.codigo }}
                {% endif %}
              </p>
              <hr>
              <strong><i class="fa  fa-list margin-r-5"></i> Version </strong>
              <p>
                {% if proceso.archivos|length != 0 %}
                  {% for archivo in proceso.archivos %}
                      {% if archivo.estado %}
                          <div class="label label-success"> {{ archivo.version }}</div>
                      {% endif %}
                  {% endfor %}
                {% else %}
                  <h5 class="label label-danger"><i class="fa fa-clock-o"></i> No hay asignado ningun archivo</h5>
                {% endif %}
              </p>
              <hr>
              <strong><i class="fa fa-calendar margin-r-5"></i>Vigencia </strong>
              <p>{{proceso.vigencia}}</p>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
</div>

    <table class="table display">
        <thead>
            <tr>
                <th>Tipo de auditoria</th>
                <th>Objetivos</th>
                <th>Alcance</th>
                <th>Criterio</th>
                <th>Fechainicio</th>
                <th>Fechafind</th>
                <th>Recomendaciones</th>
                <th>Seguimiento</th>
                <th>Informe</th>
                <th>Concluciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for auditorium in auditorias %}
            <tr>
                <td>{{ auditorium.tipoAuditoria }}</td>
                <td>{{ auditorium.objetivos }}</td>
                <td>{{ auditorium.alcance }}</td>
                <td>{{ auditorium.criterio }}</td>
                <td>{% if auditorium.fechaInicio %}{{ auditorium.fechaInicio|date('Y-m-d') }}{% endif %}</td>
                <td>{% if auditorium.fechaFind %}{{ auditorium.fechaFind|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('auditoria_show', { 'id': auditorium.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('auditoria_edit', { 'id': auditorium.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('auditoria_new') }}">Create a new auditorium</a>
        </li>
    </ul>
{% endblock %}
