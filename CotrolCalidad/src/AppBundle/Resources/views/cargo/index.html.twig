{% extends 'base.html.twig' %}

{% block referencia %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Cargo</li>
    </ol>
{% endblock %} 

{% block body %}
  <div class="col-lg-12">
    <div class="col-lg-1">
                    <a data-toggle="tooltip"data-original-title="Agregar nuevo cargo" href="{{ path('cargo_new')}}" class="btn btn-app btn-xs">
                        <i class="fa fa-plus"></i> Agregar
                    </a>
                </div>
       
        <div class="col-lg-12">
          <div class="box">
            <div class="box-header">
                
              <h3 class="box-title">Cargo</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">

                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Ver</th>
                </tr>
                </thead>

                <tbody>
                {% for cargo in cargos %}
                    <tr>
                        <td><a href="{{ path('cargo_show', { 'id': cargo.id }) }}">{{ cargo.id }}</a></td>
                        <td>{{ cargo.nombre }}</td>
                        <td>
                            <div class="btn-group">
                              <a data-toggle="tooltip"data-original-title="editar" href="{{ path('cargo_edit', { 'id': cargo.id }) }}" class="btn btn-default btn-flat"><i class="fa fa-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
               
              </table>

            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
          </div>
           
</div>
{% endblock %}
