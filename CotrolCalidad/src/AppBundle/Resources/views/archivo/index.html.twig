{% extends 'base.html.twig' %}

{% block body %}
    <h1>Archivos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Versión</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Original</th>
                <th>PDF</th>
                <th>+ Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for archivo in archivos %}
            <tr>
                <td><a href="{{ path('archivo_show', { 'id': archivo.id }) }}">{{ archivo.id }}</a></td>
                <td>{{ archivo.version }}</td>
                <td>{{ archivo.descripcion }}</td>
                <td>{% if archivo.estado %}Yes{% else %}No{% endif %}</td>
                <td><a href="{{ path('documento_archivo_download', { 'id': archivo.id }) }}">Descargar</a></td>
                <td><a href="{{ path('documento_pdf_archivo_download', { 'id': archivo.id }) }}">Descargar</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('archivo_show', { 'id': archivo.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('archivo_edit', { 'id': archivo.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('archivo_new') }}">Crear nuevo archivo</a>
        </li>
    </ul>
{% endblock %}
