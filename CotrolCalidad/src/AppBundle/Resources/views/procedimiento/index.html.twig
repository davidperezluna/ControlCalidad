{% extends 'base.html.twig' %}

{% block referencia %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Procedimiento</li>
    </ol>
{% endblock %}

{% block body %}
    <!-- /.box -->
<div class="col-lg-12">
        <div class="col-lg-1">
            <a href="{{ path('procedimiento_new')}}" class="btn btn-app btn-xs">
                <i class="fa fa-plus"></i> Agregar
            </a>
        </div>
       
        <div class="col-lg-12">
          <div class="box">
            <div class="box-header">
                
              <h3 class="box-title">Procedimiento</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">

                <thead>
                <tr>
                    <th>Id</th>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Vigencia</th>
                    <th>Version</th>
                    <th>Descargar </th>
                    <th>Descargar pdf</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                 {% for procedimiento in procedimientos %}
                    <tr>
                        <td><a href="{{ path('procedimiento_show', { 'id': procedimiento.id }) }}">{{ procedimiento.id }}</a></td>
                        <td>{{ procedimiento.codigo }}</td>
                        <td>{{ procedimiento.nombre }}</td>
                        <td>{% if procedimiento.vigencia %}{{ procedimiento.vigencia|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ procedimiento.version }}</td>
                        <td><a href="{{ path('documento_procedimiento_download', { 'id': procedimiento.id }) }}">Descargar</a></td>
                        <td><a href="{{ path('documento_pdf_procedimiento_download', { 'id': procedimiento.id }) }}">Descargar</a></td>
                        <td>
                            <div class="btn-group">
                              <a href="{{ path('procedimiento_show', { 'id': procedimiento.id }) }}" class="btn btn-default btn-flat"><i class="fa fa-eye"></i></a>
                              <a href="{{ path('procedimiento_edit', { 'id': procedimiento.id }) }}" class="btn btn-default btn-flat"><i class="fa fa-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
               
              </table>

            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
      </div>
           
</div>
{% endblock %}
