{% extends 'base.html.twig' %}

{% block body %}
    <h1>Procedimiento</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ procedimiento.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ procedimiento.codigo }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ procedimiento.nombre }}</td>
            </tr>
            <tr>
                <th>Vigencia</th>
                <td>{% if procedimiento.vigencia %}{{ procedimiento.vigencia|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ procedimiento.version }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('procedimiento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('procedimiento_edit', { 'id': procedimiento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
